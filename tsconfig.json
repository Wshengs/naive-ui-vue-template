{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": ["vite/client"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "_components/*": ["src/components/*"],
            "_assets/*": ["src/assets/*"],
            "_pages/*": ["src/pages/*"]
        },
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "naive-ui/**/*.ts",
        "naive-ui/**/*.d.ts",
        "naive-ui/**/*.tsx"
    ]
}
